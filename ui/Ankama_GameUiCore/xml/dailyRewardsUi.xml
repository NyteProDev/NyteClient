<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Import url="[config.mod.template]button/simpleButton.xml" />
	<Import url="[config.mod.template]button/iconButton.xml" />
	<Import url="[config.mod.template]button/horizontalTab.xml" />
	<Import url="[config.mod.template]button/labelCheckBox.xml" />
	<Import url="[config.mod.template]button/greyButton.xml" />
	<Import url="[config.mod.template]button/themeHorizontalTab.xml" />
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	<Import url="[config.mod.template]button/searchInput.xml" />
	<Import url="[config.mod.template]button/themeLabelCheckBox.xml" />
	<Import url="[config.mod.template.button]comboBoxWithBackground.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
	   	<Constant name="css" value="[config.ui.skin]css/" />
	   	<Constant name="common" value="[config.ui.skin]common/" />
	   	<Constant name="texture" value="[config.ui.skin]texture/" />
		<Constant name="slot" value="[config.ui.skin]texture/slot/" />
		
		<Constant name="hints_uri" value="[config.content.path]gfx/icons/hints/" />
		<Constant name="slotLocked" value="mod://Ankama_GameUiCore/assets/tx_slotLocked.png" />
		<Constant name="slotUnlocked" value="mod://Ankama_GameUiCore/assets/tx_slotUnlocked.png" />
		<Constant name="slotCurrent" value="mod://Ankama_GameUiCore/assets/tx_slotCurrent.png" />
	</Constants>
	
	<Container>
		<window name="mainCtr">
		
			<movable>true</movable>
			<title>[ui.dailyRewards.title]</title>
			<Anchors>
				<Anchor point="CENTER" relativePoint="CENTER">
					<AbsDimension x="0" y="-60" />
				</Anchor>
			</Anchors>
			
			 <Size>
				<AbsDimension x="775" y="680" />
			</Size>
			<iconUri>[local.hints_uri]435.png</iconUri>
			
			<Content>
			
				<block dark="true">
					<Anchors>
						<Anchor>
							<AbsDimension x="5" y="5" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="727" y="613" />
					</Size>
					
					<Content>

						<Grid name="gd_rewards">
							<Anchors>
								<Anchor point="CENTER" relativePoint="CENTER">
									<AbsDimension x="0" y="-50" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="676" y="460"/>
							</Size>
							
							<rendererName>InlineXmlGridRenderer</rendererName>
							<rendererArgs>updateRewards</rendererArgs>
							<scrollDisplay>never</scrollDisplay>
							<slotWidth>83</slotWidth>
							<slotHeight>99</slotHeight>
										
							<Container name="ctr_reward">
								<Size>
									<AbsDimension x="94" y="113" />
								</Size>
								<visible>false</visible>
								
								<Texture name="tx_slot">
									<Anchors>
										<Anchor>
											<AbsDimension x="0" y="0" />
										</Anchor>
									</Anchors>
									<Size>
										<AbsDimension x="94" y="113" />
									</Size>
									<!-- <uri>[local.slotLocked]</uri> -->
								</Texture>
								
								<Texture name="tx_item">
									<Anchors>
										<Anchor>
											<AbsDimension x="22" y="15" />
										</Anchor>
									</Anchors>
									<Size>
										<AbsDimension x="50" y="50" />
									</Size>
								</Texture>
								
								 <Label name="lbl_day">
									<Anchors>
										<Anchor>
											<AbsDimension x="66" y="10" />
										</Anchor>
									</Anchors>
									<!-- <Size>
										<AbsDimension x="22"/>
									</Size> -->
									<cssClass>white</cssClass>
									<css>[local.css]title.css</css>
								</Label>
							
								<Label name="lbl_amount">
									<Anchors>
											<Anchor>
												<AbsDimension x="34" y="80" />
											</Anchor>
										</Anchors>
									<cssClass>white</cssClass>
									<css>[local.css]title.css</css>
								</Label>
							
							</Container>
						</Grid>
						
						<simpleButton label="[ui.dailyRewards.getRewards]" name="btn_getRewards">
							<Anchors>
								<Anchor point="CENTER" relativePoint="BOTTOM" relativeTo="gd_rewards">
									<AbsDimension x="0" y="60" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="200" y="40" />
							</Size>
						</simpleButton>	
						
					</Content>
					
				</block>
				
			</Content>
			
		</window>
		
	</Container>
	
</Definition>