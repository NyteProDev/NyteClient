<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Import url="[config.mod.template.button]simpleButton.xml" />
	<Import url="[config.mod.template.button]iconButton.xml" />
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
	   	<Constant name="css" value="[config.ui.skin]css/" />
	   	<Constant name="common" value="[config.ui.skin]common/" />
	   	<Constant name="texture" value="[config.ui.skin]texture/" />
		
		<Constant name="hints_uri" value="[config.content.path]gfx/icons/hints/" />
	</Constants>
	
	<window>
		<title>[ui.osmoz.prestige]</title>
		<movable>true</movable>
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER">
				
			</Anchor>
		</Anchors>
		
		<Size>
			<AbsDimension x="500" y="300" />
		</Size>
		<iconUri>[local.hints_uri]1005.png</iconUri>
		
		<Content>
		
			<block dark="true">
				<Anchors>
					<Anchor>
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="466" y="236" />
				</Size>
				<Content>
					<Anchors>
						<Anchor>
							<AbsDimension x="25" y="25" />
						</Anchor>
					</Anchors>
					
					<Texture>
						<Size>
							<AbsDimension x="85" y="85" />
						</Size>
						<uri>[local.texture]slot/slot_dark_background_empty.png</uri>
					</Texture>
					
					<Slot name="slot_prestige">
						<bgColor>[colors.ui.shadow.dark]</bgColor>
						<bgAlpha>0</bgAlpha>
						<Size>
							<AbsDimension x="85" y="85" />
						</Size>
						<!-- <emptyTexture>[local.hints_uri]1005.png</emptyTexture> -->
					</Slot>
					
					<Label name="lbl_currentPrestige">
						<Anchors>
							<Anchor>
								<AbsDimension x="95" y="0" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="200" y="0" />
						</Size>
						<cssClass>extrawhitebig</cssClass>
						<css>[local.css]normal2.css</css>
						
						<text>Prestige : %1 / %2</text>
					</Label>
					
					<Label name="lbl_currentlevelPrestige">
						<Anchors>
							<Anchor>
								<AbsDimension x="95" y="65" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="200" y="0" />
						</Size>
						<cssClass>extrawhitebig</cssClass>
						<css>[local.css]normal2.css</css>
						
						<text>Level Prestige : %1 / %2</text>
					</Label>
					
					<ProgressBar name="pb_prestigeXp">
						<Anchors>
							<Anchor>
								<AbsDimension y="105" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="415" y="22" />
						</Size>
						<barColor>0xffea00</barColor>
						<barForegroundThemeData>progress_bar_foreground</barForegroundThemeData>
						<separators>9</separators>
					</ProgressBar>
					
					<ProgressBar name="pb_levelprestigeXp">
						<Anchors>
							<Anchor>
								<AbsDimension y="140" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="415" y="22" />
						</Size>
						<barColor>0xffea00</barColor>
						<barForegroundThemeData>progress_bar_foreground</barForegroundThemeData>
						<separators>4</separators>
					</ProgressBar>
					
					<simpleButton label="[ui.osmoz.nextPrestige]" name="btn_prestige">
						<Anchors>
							<Anchor point="CENTER" relativePoint="CENTER" relativeTo="pb_levelprestigeXp">
								<AbsDimension x="-100" y="35" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="145" y="25" />
						</Size>
					</simpleButton>	
					
					<simpleButton label="[ui.osmoz.resetPrestige]" name="btn_resetprestige">
						<Anchors>
							<Anchor point="CENTER" relativePoint="CENTER" relativeTo="pb_levelprestigeXp">
								<AbsDimension x="100" y="35" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="145" y="25" />
						</Size>
					</simpleButton>	
					
				</Content>
			</block>
			
		</Content>
		
	</window>

</Definition>