<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	
	<Import url="[config.mod.template]button/simpleButton.xml" />
	<Import url="[config.mod.template]button/iconButton.xml" />
	<Import url="[config.mod.template]button/horizontalTab.xml" />
	<Import url="[config.mod.template]button/labelCheckBox.xml" />
	<Import url="[config.mod.template]button/greyButton.xml" />
	<Import url="[config.mod.template]button/themeHorizontalTab.xml" />
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	<Import url="[config.mod.template]button/searchInput.xml" />
	<Import url="[config.mod.template]button/themeLabelCheckBox.xml" />
	<Import url="[config.mod.template.button]comboBoxWithBackground.xml" />
	<Import url="[config.mod.template]specific/characterCreationColorSlot.xml" />

	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="common" value="[config.ui.skin]common/"/>
		<Constant name="texture" value="[config.ui.skin]texture/"/>
		<Constant name="bitmap" value="[config.ui.skin]bitmap/"/>
		<Constant name="illus" value="[config.ui.skin]illus/"/>
	</Constants>

		<window name="mainCtr">
			<iconUri>[local.texture]windowIcon/icon__0001_Tous.png</iconUri>
			<movable>true</movable>
			<title>[ui.stelys.custom.title]</title>
			<Anchors>
				<Anchor relativePoint="CENTER" point="CENTER">
					<AbsDimension x="0" y="0" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="625" y="395" />
			</Size>
			
			<OverFrameContent>
			
				<Container name="ctr_customTitle">
				
					<Anchors>
						<Anchor>
							<AbsDimension x="33" />
						</Anchor>
					</Anchors>
				
					<TextureBitmap>
						<Anchors>
							<Anchor>
								<AbsDimension x="-6" y="25" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="263" y="42" />
						</Size>
						<themeDataId>bg_small_border_dark</themeDataId>
					</TextureBitmap>
					
					<Input name="inp_customTitle">
						<Anchors>
							<Anchor>
								<AbsDimension x="10" y="33" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="244" y="40" />
						</Size>
						<css>[local.css]normal2.css</css>
						<maxChars>30</maxChars>
						<restrict>[A-Za-z0-9 ]</restrict>
					</Input>
					
					<comboBoxWithBackground name="cb_style" strata="TOP" width="222" height="39">
						<Anchors>
							<Anchor>
								<AbsDimension x="10" y="60" />
							</Anchor>
						</Anchors>
						<autoSelectMode>1</autoSelectMode>
					</comboBoxWithBackground>
					
					<comboBoxWithBackground name="cb_fonts" strata="HIGH" width="222" height="39">
						<Anchors>
							<Anchor>
								<AbsDimension x="10" y="94" />
							</Anchor>
						</Anchors>
						<autoSelectMode>1</autoSelectMode>
					</comboBoxWithBackground>
					
				</Container>
				
			</OverFrameContent>
			
			<Content>
			
				<Container name="ctr_color">
				
					<Anchors>
						<Anchor>
							<AbsDimension x="33" y="27" />
						</Anchor>
					</Anchors>

					<ColorPicker name="cp_colorPk">
						<Size>
							<AbsDimension x="248" y="226" />
						</Size>
						<sliderTexture>[local.bitmap]cursorSlider.png</sliderTexture>
						<gradientTexture>[local.bitmap]cursorGradient.png</gradientTexture>
					</ColorPicker>
					
					<Container name="ctr_hexaColor">
						<Anchors>
							<Anchor>
								<AbsDimension x="-30" y="60" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="160" y="40" />
						</Size>
						
						<shadowColor>[colors.ui.shadow]</shadowColor>

						<Label>
							<Anchors>
								<Anchor>
									<AbsDimension x="8" y="7" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="30" y="16" />
							</Size>
							<cssClass>darkright</cssClass>
							<css>[local.css]normal2.css</css>
							<text>0x</text>
						</Label>

						<TextureBitmap>
							<Anchors>
								<Anchor>
									<AbsDimension x="8" y="0" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="110" y="37" />
							</Size>
							<themeDataId>bg_small_border_dark</themeDataId>
						</TextureBitmap>

						<Input name="inp_hexaValue">
							<Anchors>
								<Anchor>
									<AbsDimension x="40" y="7" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="80" y="18" />
							</Size>
							<css>[local.css]normal2.css</css>
							<maxChars>6</maxChars>
							<restrict>0-9a-zA-Z</restrict>
						</Input>

						<themeIconButton name="btn_hexaOk">
							<Anchors>
								<Anchor>
									<AbsDimension x="120" y="5" />
								</Anchor>
							</Anchors>
							<Size>
								<AbsDimension x="26" y="26" />
							</Size>
							<iconUri>[local.texture]btnIcon/btnIcon_check.png</iconUri>
						</themeIconButton>
					
					</Container>
					
				</Container>
		
				<Container strata="LOW">
				
					<Texture name="tx_slotBackground">
						<Anchors>
							<Anchor>
								<AbsDimension x="310" y="25" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="250" y="287" />
						</Size>
						<uri>[local.common]inventory_slot_background.png</uri>
					</Texture>

					<EntityDisplayer name="entityDisplayer">
						<Anchors>
							<Anchor>
								<AbsDimension x="324" y="85" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="100" y="100" />
						</Size>
						<direction>2</direction>
						<scale>1.5</scale>
						<yOffset>50</yOffset>
						<clearSubEntities>true</clearSubEntities>
						<useFade>false</useFade>
					</EntityDisplayer>
				
					<simpleButton label="[ui.common.validate]" name="btn_validate">
						<Anchors>
							<Anchor>
								<AbsDimension x="34" y="272" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="244" y="35" />
						</Size>
						<cssClass>darkboldcenter</cssClass>
						<css>[local.css]normal2.css</css>
					</simpleButton>
				
				</Container>
					
			</Content>
			
		</window>
		
</Definition>