<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition fullscreen="true">
	<Import url="[config.mod.template.button]iconButton.xml" />
    <Import url="[config.mod.template]button/themeIconButton.xml" />
    <Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
        <Constant name="texture" value="[config.ui.skin]texture/" />
	</Constants>
	
	<Container name="ctr_btnOpenPanel">
		<Anchors>
               <Anchor relativePoint="BOTTOM" point="CENTER">
               	<AbsDimension x="0" y="-160" />
			</Anchor>
		</Anchors>
		<visible>true</visible>
		
		<TextureBitmap name="tx_background">
			<Anchors>
				<Anchor>
					<AbsDimension x="40" y="-5"/>
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="7" y="48" />
			</Size>
			<themeDataId>hud_window_background</themeDataId>
		</TextureBitmap>
		
        <Texture name="txBtn">
        	<Anchors>
				<Anchor relativeTo="btn_open" relativePoint="TOPLEFT">
					<AbsDimension x="-4" y="-4" />
				</Anchor>
				<Anchor relativeTo="btn_open" relativePoint="BOTTOMRIGHT">
					<AbsDimension x="4" y="4" />
				</Anchor>
			</Anchors>
			<uri>[local.texture]btnIcon/bg_BtnChest.png</uri>
			<visible>true</visible>
        </Texture>
		
		<themeIconButton name="btn_open">
			<Size>
				<AbsDimension x="38" y="38" />
			</Size>
			
            <iconUri>[local.texture]btnIcon/btnIcon_external_link.png</iconUri>
			<visible>true</visible>
		</themeIconButton>
		
		<TextureBitmap name="tx_separator">
			<Anchors>
				<Anchor relativeTo="tx_background" relativePoint="TOPRIGHT">
					<AbsDimension x="-7" y="0" />
				</Anchor>
				<Anchor relativeTo="tx_background" relativePoint="BOTTOMRIGHT">
					<AbsDimension x="0" y="0" />
				</Anchor>
			</Anchors>
			<themeDataId>separator_green_column</themeDataId>
			<dragController>true</dragController>
			<dragTarget>ctr_btnOpenPanel</dragTarget>
			<useDragMagnetism>true</useDragMagnetism>
			<dragBoundsContainer>ctr_btnOpenPanel</dragBoundsContainer>
		</TextureBitmap>
		
		<TextureBitmap>
			<Anchors>
				<Anchor relativeTo="tx_background" relativePoint="TOPRIGHT">
					<AbsDimension x="-7" y="0" />
				</Anchor>
				<Anchor relativeTo="tx_background" relativePoint="BOTTOMRIGHT">
					<AbsDimension x="0" y="0" />
				</Anchor>
			</Anchors>
			<visible>true</visible>
			<uri>[config.ui.skin]texture/hud/background_hud_shadow.png</uri>
		</TextureBitmap>
		
	</Container>
</Definition>