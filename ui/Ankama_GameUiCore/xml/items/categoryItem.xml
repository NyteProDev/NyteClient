												<AbsDimension x="290" y="34" />
											</Size>
										<bgColor>[colors.grid.line]</bgColor>
										</Texture>


				<Label name="lbl_cat">
					<Anchors>
												<Anchor>
													<AbsDimension x="15" y="4" />
												</Anchor>
											</Anchors>
											<Size>
												<AbsDimension x="270" y="21" />
											</Size>
											<css>[local.css]normal2.css</css>
										</Label>
				
			</Common>
		</Button>
		
	</Container>
	
</Definition>

