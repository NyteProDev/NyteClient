    <Constants>
        <Constant name="gfx" value="[config.gfx.path]"/>
        <Constant name="picto_uri" value="[config.gfx.path]characteristics/characteristics.swf|" />
        <Constant name="assets" value="[config.ui.skin]assets.swf|" />
