<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	
	<Import url="[config.mod.template]button/simpleButton.xml" />
	<Import url="[config.mod.template]button/iconButton.xml" />
	<Import url="[config.mod.template]button/horizontalTab.xml" />
	<Import url="[config.mod.template]button/labelCheckBox.xml" />
	<Import url="[config.mod.template]button/greyButton.xml" />
	<Import url="[config.mod.template]button/themeHorizontalTab.xml" />
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	<Import url="[config.mod.template]button/searchInput.xml" />
	<Import url="[config.mod.template]button/themeLabelCheckBox.xml" />
	<Import url="[config.mod.template.button]comboBoxWithBackground.xml" />
	<Import url="[config.mod.template]specific/characterCreationColorSlot.xml" />

	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="common" value="[config.ui.skin]common/"/>
		<Constant name="texture" value="[config.ui.skin]texture/"/>
		<Constant name="bitmap" value="[config.ui.skin]bitmap/"/>
		<Constant name="illus" value="[config.ui.skin]illus/"/>
	</Constants>
	
	<Container>

		<Anchors>
			<Anchor relativePoint="CENTER" point="CENTER">
				<AbsDimension x="0" y="0" />
			</Anchor>
		</Anchors>

		
		<window>
			<iconUri>[local.texture]windowIcon/icon__0001_Tous.png</iconUri>
			<movable>true</movable>
			<title>[ui.stelys.auras.title]</title>
			<Size>
				<AbsDimension x="900" y="650" />
			</Size>
			
			<Content>
			
				<Container>
				
					<Anchors>
						<Anchor>
							<AbsDimension x="40" y="25" />
						</Anchor>
					</Anchors>

					<Grid name="gd_articles">
						<Size>
							<AbsDimension x="515" y="509" />
						</Size>
						<rendererName>InlineXmlGridRenderer</rendererName>
						<rendererArgs>updateAuras</rendererArgs>
						<slotWidth>50</slotWidth>
						<slotHeight>50</slotHeight>

						<Container name="ctr_articles">
							<Size>
								<AbsDimension x="210" y="201" />
							</Size>
							<Anchors>
								<Anchor>
									<AbsDimension x="6" />
								</Anchor>
							</Anchors>
							
							<Button name="btn_articles">
								<Common>
									<Size>
										<AbsDimension x="167" y="250" />
									</Size>
									<radioMode>true</radioMode>

									<Texture name="tx_articles">
										<Size>
											<AbsDimension x="50" y="50" />
										</Size>
									</Texture>
									
									<Texture>
										<Size>
											<AbsDimension x="50" y="50" />
										</Size>
										<uri>[local.texture]onboarding/filterColorChoice.png</uri>
									</Texture>
								</Common>

								<State type="OVER">
									<SetProperties target="btn_articles">
										<bgColor>[colors.grid.over]</bgColor>
									</SetProperties>
								</State>
							</Button>
							
						</Container>

						<Hooks>
							<onSelectItem />
						</Hooks>
					</Grid>
					
				</Container>
				
					<Texture>
						<Anchors>
							<Anchor>
								<AbsDimension x="300" y="25" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="175" y="175" />
						</Size>
						<uri>[local.common]inventory_slot_background.png</uri>
					</Texture>
			</Content>
			
		</window>
		
	</Container>
</Definition>