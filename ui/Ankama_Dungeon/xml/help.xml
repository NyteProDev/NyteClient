							<Anchor point="TOP" relativePoint="TOP">
								<AbsDimension x="100" y="10" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="150" y="35" />
						</Size>
					</simpleButton>
					
					<simpleButton label="Familiers" name="btn_pets">
