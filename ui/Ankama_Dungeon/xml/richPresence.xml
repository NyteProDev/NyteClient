<?xml version="1.0" encoding="UTF-8"?>
<Definition>
	<Import url="[config.mod.template.button]iconButton.xml" />
	<Import url="[config.mod.template.button]simpleButton.xml" />
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	<Import url="[config.mod.template.button]themeIconButton.xml" />
	<Import url="[config.mod.template.button]themeLabelCheckBox.xml" />
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="stelys" value="[config.ui.skin]reward_test.swf|" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="common" value="[config.ui.skin]common/" />
		<Constant name="texture" value="[config.ui.skin]texture/" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />
		<Constant name="illus" value="[config.ui.skin]illus/" />
		<Constant name="height_tx_generalBg" value="536" type="int" />
		<Constant name="height_tx_gridBg" value="412" type="int" />
		<Constant name="height_grid" value="400" type="int" />
		<Constant name="y_bottom" value="520" type="int" />
		<Constant name="height_line" value="100" type="int" />
	</Constants>
	<window name="ctr_mainWindow">
		<Anchors>
			<Anchor relativePoint="BOTTOM" point="BOTTOM">
				<AbsDimension x="0" y="-240" />
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="550" y="370" />
		</Size>
		<title>Discord Rich Presence</title>
		<movable>true</movable>
		<dark>true</dark>
		<hintAvailable>false</hintAvailable>
		<noHelpButton>true</noHelpButton>
		<Content>
			<Container name="ctr_grid">
				<Anchors>
					<Anchor>
						<AbsDimension x="7" y="5" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="550" y="270" />
				</Size>
				
				
				
				<Label name="lbl">
					<Anchors>
						<Anchor>
							<AbsDimension x="0" y="15" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="500"/>
					</Size>
					<cssClass>subbonus</cssClass>
					<css>[local.css]title.css</css>
					<text>Gérez l'interaction du jeu avec votre client Discord:</text>
					<useDefaultFont>true</useDefaultFont>
					<bgColor>0x0</bgColor>
					<bgAlpha>0</bgAlpha>
				</Label>
				
				<Container name="ctr_checks">
					<Anchors>
						<Anchor relativeTo="lbl" relativePoint="BOTTOM" point="TOP">
							<AbsDimension x="50" y="25" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="500" y="110" />
					</Size>
					
					
					<themeLabelCheckBox name="chk_showBreed">
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="0"/>
							</Anchor>
						</Anchors>
						<labelWidth>230</labelWidth>
						<css>[local.css]title.css</css>
						<cssClass>subevent</cssClass>
						<text>Afficher la Classe</text>
					</themeLabelCheckBox>
					
					<themeLabelCheckBox name="chk_showLevel">
						<Anchors>
							<Anchor relativeTo="chk_showBreed" relativePoint="BOTTOM" point="TOP">
								<AbsDimension x="0" y="5"/>
							</Anchor>
						</Anchors>
						<labelWidth>230</labelWidth>
						<css>[local.css]title.css</css>
						<cssClass>subevent</cssClass>
						<text>Afficher le Niveau</text>
					</themeLabelCheckBox>
					
					<themeLabelCheckBox name="chk_showSubArea">
						<Anchors>
							<Anchor relativeTo="chk_showLevel" relativePoint="BOTTOM" point="TOP">
								<AbsDimension x="0" y="5"/>
							</Anchor>
						</Anchors>
						<labelWidth>230</labelWidth>
						<css>[local.css]title.css</css>
						<cssClass>subevent</cssClass>
						<text>Afficher la Zone</text>
					</themeLabelCheckBox>
					
					<themeLabelCheckBox name="chk_showState">
						<Anchors>
							<Anchor relativeTo="chk_showSubArea" relativePoint="BOTTOMLEFT" point="TOPLEFT">
								<AbsDimension x="0" y="5"/>
							</Anchor>
						</Anchors>
						<labelWidth>270</labelWidth>
						<css>[local.css]title.css</css>
						<cssClass>subevent</cssClass>
						<text>Afficher l'état actuel (en combat, ...)</text>
					</themeLabelCheckBox>
				</Container>
				
				<simpleButton label="Rejoindre notre discord" name="btn_join">
					<Anchors relativeTo="ctr_checks" relativePoint="BOTTOM" point="TOP">
						<Anchor>
							<AbsDimension x="143" y="190" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="200" y="35" />
					</Size>
				</simpleButton>
				
				<simpleButton label="APPLIQUER" name="btn_save">
					<Anchors relativeTo="ctr_checks" relativePoint="BOTTOM" point="TOP">
						<Anchor>
							<AbsDimension x="170" y="240" />
						</Anchor>
					</Anchors>
					<Size>
						<AbsDimension x="150" y="35" />
					</Size>
				</simpleButton>
				
			</Container>
		</Content>
	</window>
</Definition>