<?xml version="1.0" encoding="UTF-8"?>
<Definition>
	<Import url="[config.mod.template.button]iconButton.xml" />
	<Import url="[config.mod.template.button]simpleButton.xml" />
	<Import url="[config.mod.template]window.xml" />
	<Import url="[config.mod.template]block.xml" />
	<Import url="[config.mod.template.button]themeIconButton.xml" />
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="stelys" value="[config.ui.skin]texture/stelys/crate.swf|" />
		<Constant name="stelysf" value="[config.ui.skin]texture/stelys/" />
		<Constant name="slot" value="[config.ui.skin]texture/slot/" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="common" value="[config.ui.skin]common/" />
		<Constant name="texture" value="[config.ui.skin]texture/" />
		<Constant name="bitmap" value="[config.ui.skin]bitmap/" />
		<Constant name="illus" value="[config.ui.skin]illus/" />
		<Constant name="height_ctr" value="600" type="int" />
		<Constant name="width_ctr" value="1000" type="int" />
	</Constants>
	
	<Container name="ctr_main">
		<Anchors>
			<Anchor  relativePoint="CENTER" point="CENTER">
				<AbsDimension x="0" y="0" />
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="[local.width_ctr]" y="[local.height_ctr]" />
		</Size>
		<mouseEnabled>true</mouseEnabled>
		<bgColor>0x0</bgColor>
		<bgAlpha>0</bgAlpha>
		<Texture name="tx_bg">
			<Anchors>
				<Anchor  relativePoint="CENTER">
					<AbsDimension x="0" y="0" />
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="[local.width_ctr]" y="[local.height_ctr]" />
			</Size>
			<uri>[local.stelys]/CrateBackground</uri>
		</Texture>
		<themeIconButton name="btn_close">
			<Size>
				<AbsDimension x="27" y="27" />
			</Size>
			<Anchors>
				<Anchor  relativePoint="TOPRIGHT">
					<AbsDimension x="-37" y="10" />
				</Anchor>
			</Anchors>
			<iconUri>[local.texture]btnIcon/btnIcon_cross.png</iconUri>
			<Hooks>
				<onRelease />
			</Hooks>
		</themeIconButton>
		
		<Container name="ctr_items">
			<Size>
				<AbsDimension x="[local.width_ctr]" y="[local.height_ctr]" />
			</Size>
			<Texture>
				<Anchors>
					<Anchor>
						<AbsDimension x="200" y="100" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="150" />
				</Size>
				<bgColor>0xFFFFFF</bgColor>
				<bgAlpha>0.8</bgAlpha>
			</Texture>
			<Texture name="bg_crate">
				<Anchors>
					<Anchor  relativeTo="tx_crate" relativePoint="TOPLEFT">
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="150" />
				</Size>
				<uri>[local.slot]slot_big_dark_background_full.png</uri>
			</Texture>
			<Texture name="tx_crate">
				<Anchors>
					<Anchor>
						<AbsDimension x="200" y="100" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="150" />
				</Size>
			</Texture>
			<Texture >
				<Anchors>
					<Anchor>
						<AbsDimension x="650" y="100" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="150" />
				</Size>
				<bgColor>0xFFFFFF</bgColor>
				<bgAlpha>0.8</bgAlpha>
			</Texture>
			<Texture name="bg_key">
				<Anchors>
					<Anchor  relativeTo="tx_key" relativePoint="TOPLEFT">
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="150" />
				</Size>
				<uri>[local.slot]slot_big_dark_background_full.png</uri>
			</Texture>
			<Texture name="tx_key">
				<Anchors>
					<Anchor>
						<AbsDimension x="650" y="100" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="150" />
				</Size>
			</Texture>
			<Label name="lbl_keyrequire">
				<Anchors>
					<Anchor relativeTo="tx_key" relativePoint="BOTTOMLEFT" point="BOTTOMLEFT">
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="30" />
				</Size>
				<css>[local.css]title.css</css>
				<cssClass>craterequire</cssClass>
				<text>x100</text>
			</Label>
			<simpleButton label="OUVRIR" name="btn_open">
				<Anchors>
					<Anchor point="CENTER" relativePoint="CENTER">
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="35" />
				</Size>
			</simpleButton>
			<Grid name="gd_items">
				<Anchors>
					<Anchor point="BOTTOM" relativePoint="BOTTOM">
						<AbsDimension x="0" y="-40" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="900" y="200" />
				</Size>
				<rendererName>InlineXmlGridRenderer</rendererName>
				<rendererArgs>updateItem</rendererArgs>
				<slotWidth>100</slotWidth>
				<slotHeight>100</slotHeight>
				<scrollDisplay>never</scrollDisplay>
					
				<Container name="item">
					<Size>
						<AbsDimension x="100" y="100" />
					</Size>
					<visible>false</visible>
					<Texture name="color_item" >
						<Size>
							<AbsDimension x="90" y="90" />
						</Size>
						<bgColor>0x5555ff</bgColor>
						<bgAlpha>1</bgAlpha>
					</Texture>
					<Texture name="bg_item">
						<Size>
							<AbsDimension x="90" y="90" />
						</Size>
						<uri>[local.slot]slot_big_dark_background_full.png</uri>
					</Texture>
					<Texture name="tx_item">
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="0" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="90" y="90" />
						</Size>
					</Texture>
					<Label name="lbl_itemquant">
						<Anchors>
							<Anchor>
								<AbsDimension x="0" y="72" />
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="90" y="0" />
						</Size>
						<css>[local.css]title.css</css>
						<cssClass>crateitemamount</cssClass>
						<text>x100</text>
						<wordWrap>false</wordWrap>
						<multiline>false</multiline>
					</Label>
				</Container>
			</Grid>
			<visible>true</visible>
		</Container>
		
		<Container name="ctr_opening">
			<Size>
				<AbsDimension x="[local.width_ctr]" y="[local.height_ctr]" />
			</Size>
			<Texture name="tx_openedcrate">
				<Anchors>
					<Anchor relativePoint="TOP" point="TOP">
						<AbsDimension x="0" y="50" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="250" y="250" />
				</Size>
				<bgColor>0xFFFFF</bgColor>
				<bgAlpha>0</bgAlpha>
			</Texture>
			<Texture name="tx_slots">
				<Anchors>
					<Anchor relativePoint="BOTTOM">
						<AbsDimension x="-73" y="-170" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="1750" y="206" />
				</Size>
				<uri>[local.stelys]/SlotsContainer</uri>
			</Texture>
			<visible>false</visible>
		</Container>
		
		<Container name="ctr_reward">
			<Size>
				<AbsDimension x="[local.width_ctr]" y="[local.height_ctr]" />
			</Size>
			<simpleButton label="CONTINUER" name="btn_continue">
				<Anchors>
					<Anchor point="CENTER" relativePoint="CENTER">
						<AbsDimension x="0" y="150" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="150" y="35" />
				</Size>
			</simpleButton>
			<visible>false</visible>
		</Container>
	</Container>
</Definition>